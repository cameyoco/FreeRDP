<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="5dip" />         
         <gradient android:angle="-90" android:startColor="#0bac8d" android:endColor="#0bac8d"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="5dip" />         
         <solid android:color="#0bac8d"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="5dip" />         
         <gradient android:angle="-90" android:startColor="#1bbc9d" android:endColor="#1bbc9d" />            
     </shape>
 </item>
</selector>